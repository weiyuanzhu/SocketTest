<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mackwell_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <meta-data
     		android:name="android.app.default_searchable"
      	 	android:value="nlight_android.nlight.DeviceActivity" />
        
        <activity
            android:name="nlight_android.nlight.PanelStatusActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="nlight_android.nlight.PanelListActivity"
            android:label="@string/title_activity_panel_list" >
        </activity>
        <activity
            android:name="nlight_android.nlight.LoadingScreenActivity"
            android:label="@string/title_activity_loading_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
             
        </activity>
        <activity
            android:name="nlight_android.nlight.PanelInfoActivity"
            android:label="@string/title_activity_panel_info" >
        </activity>
        <activity
            android:name="nlight_android.nlight.DeviceListActivity"
            android:label="@string/title_activity_device_list" >
        </activity>
        <activity
            android:name="nlight_android.nlight.DeviceInfoActivity"
            android:label="@string/title_activity_device_info" >
        </activity>
        <activity
            android:name="nlight_android.nlight.PanelActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" 
            android:parentActivityName="nlight_android.nlight.LoadingScreenActivity">
        </activity>
        <activity
            android:name="nlight_android.nlight.DeviceActivity"
            android:label="@string/title_activity_device"
            android:parentActivityName="nlight_android.nlight.PanelActivity"
            android:screenOrientation="landscape">
            <intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
       		</intent-filter>
            <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
            
        </activity>
        <activity
            android:name="nlight_android.nlight.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="nlight_android.nlight.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        
        
		<activity
		    android:name="nlight_android.test.TestActivity"
		    android:label="@string/app_name">
            
       
		</activity>            
        
        
    </application>

</manifest>
