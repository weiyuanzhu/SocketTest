<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mackwell_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="mackwell.nlight.PanelStatusActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="mackwell.nlight.PanelListActivity"
            android:label="@string/title_activity_panel_list" >
        </activity>
        <activity
            android:name="mackwell.nlight.LoadingScreenActivity"
            android:label="@string/title_activity_loading_screen" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mackwell.nlight.PanelInfoActivity"
            android:label="@string/title_activity_panel_info" >
        </activity>
        <activity
            android:name="mackwell.nlight.DeviceListActivity"
            android:label="@string/title_activity_device_list" >
        </activity>
        <activity
            android:name="mackwell.nlight.DeviceInfoActivity"
            android:label="@string/title_activity_device_info" >
        </activity>
        <activity
            android:name="mackwell.nlight.PanelActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mackwell.nlight.DeviceActivity"
            android:label="@string/title_activity_device"
            android:screenOrientation="landscape" 
            android:parentActivityName="mackwell.nlight.PanelActivity">
        </activity>
    </application>

</manifest>
