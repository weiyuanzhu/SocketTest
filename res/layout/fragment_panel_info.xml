<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelInfoFragment" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">"

        <TextView
            android:id="@+id/panel_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/panel_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/panelInfo_fetchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch Panel Data" 
            android:onClick = "fetchPanelInfo"/>

        <ListView
            android:id="@+id/panelInfo_listView"
            android:layout_width="match_parent"
            android:layout_height="354dp" >
        </ListView>
        
        

    </LinearLayout>

</FrameLayout>
